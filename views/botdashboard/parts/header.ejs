<script>
    $('#menu-phone').on('click', function() {
        $('.listbot').addClass('on')
        $('.leftmenu').addClass('on')
        $('.rightmenu').addClass('off')
    })

    $('#menu-close').on('click', function(){
        $('.listbot').removeClass('on')
        $('.leftmenu').removeClass('on')
        $('.rightmenu').removeClass('off')
    })
</script>