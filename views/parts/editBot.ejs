<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("../parts/head", { title: 'Modification' }) %>
        
    </head>

    <style>
  .dropdown-content li>span{
    color: #2C2F33;
}


body.dark-theme input {
    color:white;
}

.input-field{
    width: 70%;
    margin-left: auto;
    margin-right: auto;
    color: white;
    margin-top: 60px;
}

.tl{
    width: 60%;
    margin-left: auto;
    margin-right: auto;
}

.btn{
    background-color: #2ecc71;
    border: solid 0px;
    border-radius: 5px;
    
}

.btn:hover{
    border: solid 0px;
}

.btab{
    background-color: #7289DA;
    color: white;
    height: 40px;
    width: 200px;
    cursor: pointer;
    border: solid 0px;
    border-radius: 4px;
    text-align: left;

}


.btabl{
    color: #bdc3c7;
    height: 40px;
    width: 200px;
    cursor: pointer;
    text-align: left;
}

.btabl:hover{
      color: white;
}


.din{
    display: inline-block;
    
}

.dinflex{
    display: inline-flex;
    height: 300px;
    
}

.btabmenu{
    width: auto;
}

.tta{
    text-align: left;
}



